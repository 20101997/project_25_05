<resources>

    <!-- Toolbar -->
    <style name="TextAppearance.App.Toolbar" parent="">
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Alert Dialog -->
    <style name="Widget.App.CustomAlertDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Text -->
    <style name="TextAppearance.App.Normal" parent="">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="TextAppearance.App.SemiBold" parent="">
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="TextAppearance.App.Bold" parent="">
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="TextAppearance.App.SemiBold.Red" parent="TextAppearance.App.SemiBold">
        <item name="android:textColor">@color/colorTextRed</item>
    </style>

    <style name="TextAppearance.App.SemiBold.Blue" parent="TextAppearance.App.SemiBold">
        <item name="android:textColor">@color/darkBlue</item>
    </style>

    <style name="TextAppearance.App.SemiBold.Blue60" parent="TextAppearance.App.SemiBold">
        <item name="android:textColor">@color/darkBlue60</item>
    </style>

    <style name="TextAppearance.App.SemiBold.White" parent="TextAppearance.App.SemiBold">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.App.SemiBold.Grey" parent="TextAppearance.App.SemiBold">
        <item name="android:textColor">#424242</item>
    </style>

    <style name="TextAppearance.App.TopSheet.Label" parent="TextAppearance.App.Normal">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white60</item>
    </style>

    <style name="TextAppearance.App.TopSheet.Value" parent="TextAppearance.App.SemiBold">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.App.BottomSheet.Description" parent="TextAppearance.App.Normal">
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- SearchView -->
    <style name="Widget.App.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <!-- Checkbox -->
    <style name="Widget.App.Checkbox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:textColor">@color/darkBlue</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:buttonTint">@color/darkBlue</item>
    </style>

    <!-- Button -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_background_tint</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- TextInputLayout -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="hintTextColor">@color/darkBlue</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="android:textColorHint">@color/darkBlue</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
    </style>



    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>

        <!--Note: When setting a materialThemeOverlay on a custom TextInputLayout style, don’t forget to set editTextStyle to either a @style/Widget.MaterialComponents.TextInputEditText.* style or to a custom one that inherits from that.
        The TextInputLayout styles set materialThemeOverlay that overrides editTextStyle with the specific TextInputEditText style needed. Therefore, you don’t need to specify a style tag on the edit text.-->
        <item name="editTextStyle">@style/Widget.App.TextInputEditText</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="Widget.App.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
